{
  "name": "@localizer/core",
  "version": "1.2.1",
  "description": "Type-safe localization, formatting and translation library. The foundation of the library, providing essential utilities for localization.",
  "keywords": [
    "localization",
    "globalization",
    "i18n",
    "l10n",
    "internationalization",
    "localizer",
    "formatting",
    "translation"
  ],
  "license": "Apache-2.0",
  "author": "Artem Godin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/124c4a/localizer.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/124c4a/localizer/issues"
  },
  "homepage": "https://uselocalizer.dev",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@localizer/root": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "dependencies": {},
  "nx": {
    "targets": {
      "api": {
        "executor": "nx:run-commands",
        "dependsOn": [
          "build"
        ],
        "options": {
          "commands": [
            "node ./scripts/analyze-api.js -p {projectRoot}"
          ]
        }
      }
    }
  }
}
