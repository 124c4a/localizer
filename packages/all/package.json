{
  "name": "@localizer/all",
  "version": "1.0.0",
  "description": "Type-safe localization, formatting and translation library. All @localizer components packaged together.",
  "keywords": [
    "localization",
    "globalization",
    "i18n",
    "l10n",
    "internationalization",
    "localizer",
    "formatting",
    "translation"
  ],
  "license": "Apache-2.0",
  "author": "Artem Godin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/124c4a/localizer.git",
    "directory": "packages/all"
  },
  "bugs": {
    "url": "https://github.com/124c4a/localizer/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "dependencies": {
    "tslib": "^2.3.0",
    "@localizer/core": "1.0.0",
    "@localizer/format": "1.0.0",
    "@localizer/format-datetime": "1.0.0",
    "@localizer/format-displayname": "1.0.0",
    "@localizer/format-list": "1.0.0",
    "@localizer/format-lookup": "1.0.0",
    "@localizer/format-number": "1.0.0",
    "@localizer/format-relativetime": "1.0.0",
    "@localizer/transform": "1.0.0",
    "@localizer/translate": "1.0.0"
  },
  "nx": {
    "targets": {
      "api": {
        "executor": "nx:run-commands",
        "dependsOn": [
          "build"
        ],
        "options": {
          "commands": [
            "node ./scripts/analyze-api.js -p {projectRoot}"
          ]
        }
      }
    }
  }
}
