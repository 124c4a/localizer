{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../translate/tsconfig.lib.json"
    },
    {
      "path": "../transform/tsconfig.lib.json"
    },
    {
      "path": "../format-relativetime/tsconfig.lib.json"
    },
    {
      "path": "../format-number/tsconfig.lib.json"
    },
    {
      "path": "../format-lookup/tsconfig.lib.json"
    },
    {
      "path": "../format-list/tsconfig.lib.json"
    },
    {
      "path": "../format-displayname/tsconfig.lib.json"
    },
    {
      "path": "../format-datetime/tsconfig.lib.json"
    },
    {
      "path": "../format/tsconfig.lib.json"
    },
    {
      "path": "../core/tsconfig.lib.json"
    }
  ],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ]
}
