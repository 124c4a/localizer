{
  "name": "@localizer/root",
  "version": "0.0.0",
  "scripts": {},
  "private": true,
  "type": "module",
  "devDependencies": {
    "@eslint/js": "9.29.0",
    "@localizer/all": "^1.0.0",
    "@microsoft/api-extractor": "7.52.8",
    "@microsoft/eslint-formatter-sarif": "3.1.0",
    "@microsoft/sarif-multitool": "4.5.4",
    "@nx/eslint": "21.2.0",
    "@nx/eslint-plugin": "21.2.0",
    "@nx/js": "21.2.0",
    "@nx/vite": "21.2.0",
    "@nx/workspace": "21.2.0",
    "@types/node": "22.15.32",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.29.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-headers": "1.3.3",
    "eslint-plugin-perfectionist": "4.14.0",
    "eslint-plugin-sonarjs": "3.0.3",
    "execa": "9.6.0",
    "jsonc-eslint-parser": "2.4.0",
    "listr2": "8.3.3",
    "node-sarif-builder": "3.2.0",
    "nx": "21.2.0",
    "prettier": "3.5.3",
    "typedoc": "0.28.5",
    "typedoc-plugin-markdown": "4.7.0",
    "typedoc-plugin-mdn-links": "5.0.2",
    "typedoc-vitepress-theme": "1.1.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.34.1",
    "undici": "7.10.0",
    "verdaccio": "6.1.3",
    "vitepress": "1.6.3",
    "vitepress-sidebar": "1.31.1",
    "vitest": "3.2.4",
    "vue": "3.5.17",
    "xlsx": "file:scripts/vendor/xlsx-0.20.3.tgz",
    "yaml": "2.8.0"
  },
  "workspaces": [
    "packages/*",
    "scripts/*"
  ],
  "nx": {
    "includedScripts": [],
    "targets": {
      "local-registry": {
        "executor": "@nx/js:verdaccio",
        "options": {
          "port": 4873,
          "config": ".verdaccio/config.yml",
          "storage": "tmp/local-registry/storage"
        }
      },
      "typedoc": {
        "executor": "nx:run-commands",
        "cache": true,
        "options": {
          "commands": [
            "typedoc",
            "node scripts/reprocess-api-reference.js"
          ],
          "parallel": false
        },
        "dependsOn": [
          "^build"
        ],
        "inputs": [
          "{workspaceRoot}/packages/*/src/**/*.ts",
          "{workspaceRoot}/typedoc.base.json",
          "{workspaceRoot}/typedoc.json"
        ],
        "outputs": [
          "{workspaceRoot}/docs/api-reference"
        ]
      },
      "build": {
        "executor": "nx:run-commands",
        "dependsOn": [
          "typedoc"
        ],
        "options": {
          "command": "vitepress build"
        }
      },
      "dev": {
        "executor": "nx:run-commands",
        "dependsOn": [
          "typedoc"
        ],
        "options": {
          "command": "vitepress dev"
        }
      },
      "preview": {
        "executor": "nx:run-commands",
        "dependsOn": [
          "build"
        ],
        "options": {
          "command": "vitepress serve"
        }
      }
    }
  }
}
