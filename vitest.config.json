{
  "test": {
    "projects": ["**/vitest.config.{mjs,js,ts,mts}", "**/vite.config.{mjs,js,ts,mts}"],
    "watch": false,
    "globals": true,
    "environment": "jsdom",
    "include": ["src/**/*.{test,spec}.{ts,mts,cts,tsx}"],
    "reporters": ["default"],
    "coverage": {
      "provider": "v8",
      "reporter": [
        "lcovonly",
        [
          "text",
          {
            "file": "coverage.txt",
            "maxCols": 160,
            "skipFull": true,
            "skipEmpty": true
          }
        ],
        [
          "json-summary",
          {
            "file": "coverage-summary.json"
          }
        ]
      ]
    }
  }
}
